@model Manawork.DTOs.Users.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-box">
  <h2>Login</h2>
  <form asp-controller="User" asp-action="Login" method="POST">
    <div class="user-box">
      <input asp-for="Email" type="text">
      <label>Email</label>
      <span asp-validation-for="Email"></span>
    </div>
    <div class="user-box">
      <input asp-for="Password" type="password">
      <label>Password</label>
      <span asp-validation-for="Password"></span>
    </div>
    <div class="user-box">
      <label>Remember Me</label><input asp-for="RememberMe" type="checkbox">
    </div>
    <button type="submit">Submit</button>
  </form>
</div>
@model Manawork.DTOs.Users.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="login-box">
  <h2>Register</h2>
  <form asp-controller="User" asp-action="Register" method="POST">
    <div class="user-box">
      <input asp-for="Username" type="text">
      <label>Username</label>
      <span asp-validation-for="Username"></span>
    </div>
    <div class="user-box">
      <input asp-for="Email" type="text">
      <label>Email</label>
      <span asp-validation-for="Email"></span>
    </div>
    <div class="user-box">
      <input asp-for="Password" type="password">
      <label>Password</label>
      <span asp-validation-for="Password"></span>
    </div>
    <div class="user-box">
      <input asp-for="RePassword" type="password">
      <label>RePassword</label>
      <span asp-validation-for="RePassword"></span>
    </div>
    <button type="submit">Submit</button>
  </form>
</div>